# Redis Environment Variables for ForgeFlow v2
# Copy this file to .env and update with your secure passwords

# Redis Master Password
REDIS_PASSWORD=forgeflow2024!

# Redis ACL User Passwords
REDIS_ADMIN_PASSWORD=admin2024!
REDIS_FORGEFLOW_PASSWORD=ff2app2024!
REDIS_LOCK_PASSWORD=lock2024!
REDIS_TEAM_PASSWORD=team2024!
REDIS_MONITOR_PASSWORD=monitor2024!
REDIS_BACKUP_PASSWORD=backup2024!
REDIS_METRICS_PASSWORD=metrics2024!

# Redis Sentinel Password
SENTINEL_PASSWORD=sentinel2024!

# Redis Commander Web UI Password
REDIS_COMMANDER_PASSWORD=admin123

# Performance Tuning
REDIS_MAXMEMORY=2gb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# Logging Level
REDIS_LOG_LEVEL=notice

# TLS Configuration (Production)
REDIS_TLS_ENABLED=false
REDIS_TLS_CERT_FILE=/etc/redis/tls/redis.crt
REDIS_TLS_KEY_FILE=/etc/redis/tls/redis.key
REDIS_TLS_CA_CERT_FILE=/etc/redis/tls/ca.crt

# Backup Configuration
REDIS_BACKUP_SCHEDULE="0 2 * * *"
REDIS_BACKUP_RETENTION_DAYS=7

# Monitoring
REDIS_ENABLE_METRICS=true
PROMETHEUS_ENDPOINT=http://prometheus:9090