# FF2 Team Collaboration Configuration

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=ff2_team_redis_2024
REDIS_DB=0
REDIS_SESSION_TTL=86400
REDIS_LOCK_TTL=300
REDIS_MAX_CONNECTIONS=50

# Authentication Configuration
JWT_SECRET=ff2_jwt_secret_change_in_production_2024
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# OAuth Providers (optional - configure as needed)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Team Features
TEAM_MODE_ENABLED=true
MAX_TEAM_MEMBERS=50
DEFAULT_TEAM_ROLE=developer
INVITATION_EXPIRES_HOURS=72

# Security Settings
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

# WebSocket Configuration
WEBSOCKET_PORT=8080
WEBSOCKET_PATH=/ff2-team-ws
WEBSOCKET_CORS_ORIGIN=http://localhost:3000

# Development Settings
NODE_ENV=development
LOG_LEVEL=debug
ENABLE_METRICS=true