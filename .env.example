# GitHub Configuration (REQUIRED)
# Create a personal access token at: https://github.com/settings/tokens
# Required scopes: repo, workflow, admin:org (if using org repos)
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_OWNER=VeloF2025
GITHUB_REPO=ForgeFlow-v2-FF2

# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Dashboard Configuration
DASHBOARD_PORT=3000
DASHBOARD_HOST=localhost

# Monitoring Configuration
METRICS_PORT=9090
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Database Configuration (Optional)
DATABASE_URL=postgresql://user:password@localhost:5432/forgeflow
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=change_this_to_a_random_string
ENCRYPTION_KEY=change_this_to_another_random_string

# Agent Configuration
MAX_CONCURRENT_AGENTS=5
AGENT_TIMEOUT=300000
RETRY_ATTEMPTS=3

# Quality Gates
MIN_TEST_COVERAGE=95
MAX_COMPLEXITY=10
MAX_FILE_LINES=300

# Worktree Configuration
WORKTREE_BASE_PATH=.worktrees
MAX_WORKTREES=10
CLEANUP_ON_ERROR=true

# Protocol Settings
ENABLE_NLNH=true
ENABLE_ANTIHALL=true
ENABLE_RYR=true
RULES_PATH=.

# Emergency Mode
EMERGENCY_MODE_ENABLED=false
BYPASS_QUALITY_GATES=false

# Webhook Configuration
WEBHOOK_SECRET=change_this_to_a_webhook_secret
WEBHOOK_PORT=3002